{
  "name": "@languageforest/gemma-tokenizer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Gemma tokenizer for LanguageForest",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm -w exec tsc -p packages/gemma-tokenizer/tsconfig.json",
    "build:wasm": "wasm-pack build --target nodejs --out-dir pkg --release",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^22.18.0"
  }
}
