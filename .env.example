# ============================================
# LanguageForest Environment Configuration
# ============================================
# Duration units: ms, s, m, h, d, w (defaults to ms if omitted)

# --------------------------------------------
# Server
# --------------------------------------------
NODE_ENV=production
HOST=127.0.0.1
PORT=4001
FRONTEND_URL=http://127.0.0.1:4001

# --------------------------------------------
# Database
# --------------------------------------------
DATABASE_URL_SQLITE=file:./prisma/languageforest.db

# --------------------------------------------
# Security & Session
# --------------------------------------------
SESSION_COOKIE=session
SESSION_TTL=24h
REQUEST_BODY_LIMIT=10mb
RATELIMIT_MAX=100
RATELIMIT_WINDOWMS=10s

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_SAFETY_SETTINGS='[{"category":"HARM_CATEGORY_SEXUALLY_EXPLICIT","threshold":"BLOCK_NONE"},...]'